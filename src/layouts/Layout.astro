    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <title>Astro Basics</title>

    <script>

      let isOpen = false; 
      document.addEventListener('DOMContentLoaded', () => {

        const navMenu = document.getElementById('nav-menu');
        const toggleNavMenuButton = document.getElementById('toggle-nav-menu');
        const [hamburgerIcon, xIcon] = toggleNavMenuButton.querySelectorAll("svg");

        toggleNavMenuButton.addEventListener('click', () => {

          if ( isOpen ){    
            hamburgerIcon.classList.replace("opacity-0", "opacity-100");
            xIcon.classList.replace("opacity-100", "opacity-0");

            navMenu.classList.replace("left-0", "left-[100vw]");

            isOpen = false;
          }
          else {
            hamburgerIcon.classList.replace("opacity-100", "opacity-0");
            xIcon.classList.replace("opacity-0", "opacity-100");

            navMenu.classList.replace("left-[100vw]", "left-0");

            isOpen = true;
          }




      ``});


      });
    </script>

  </head>
  <body class="flex flex-col min-h-screen bg-gray-100">
    <slot />
  </body>
</html>

